<Window x:Class="ClipboardViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Column="1"  Name="viewContainer"/>
        <ListView Name="lwAvailableFormats"/>
        <CheckBox Name="cbSubscribe" Grid.Column="1" Grid.Row="2">Subscribe clipboard changes</CheckBox>
        <Button Name="btReload"  Grid.Row="1" Margin="10" Width="150">Reload clipboard data</Button>
    </Grid>
</Window>
